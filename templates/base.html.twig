        <link href="public/css/style.css" rel="stylesheet">
    </head>
    <!-- NavBar -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top">
         <div class="container">
             <!-- Navbar brand -->
             <a class="navbar-brand" href="{{ path('app_homepage') }}">SnowTricks</a>
          <!-- Collapse button -->
          <button class="navbar-toggler"
                  type="button"
                  data-toggle="collapse"
                  data-target="#navbarResponsive"
                  aria-controls="navbarResponsive"
                  aria-expanded="false"
                  aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Collapsible content -->
             <div class="collapse navbar-collapse" id="navbarResponsive">
              <!-- Links -->
              <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_homepage')}}">Home</a>
                  </li>
              {% if is_granted('ROLE_USER') %}
                  <li class="nav-item">
                      <a class="nav-link" href="{{ path('admin_tricks_index')}}"> Gestion Tricks</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="{{ path('app_account')}}"> Profil</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                  </li>
              {% else %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                </li>
              {% endif %}
        </ul>
      </div>

    </div>
  </nav>


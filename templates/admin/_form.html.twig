{{  form_start(form) }}

    <div class="row">
        <div class="col-md-3"> {{ form_row(form.name) }}</div>
        <div class="col-md-5"> {{ form_row(form.description) }} </div>
    </div>

    <div class="row">
        <div class="col-md-8"> {{ form_row(form.content) }} </div>
    </div>

    <div class="row">
        <div class="col-md-2"> {{ form_row(form.author) }}</div>
        <div class="col-md-1"> {{ form_row(form.difficulty) }} </div>
    </div>

    <button class="btn btn-primary"> {{button |default('Enregistrer')}} </button> 

{{ form_widget(form) }}
{{  form_end(form) }}
{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les Tricks  </h1>
</div>


    <!-- Il en faut 5 par ligne --> <!-- Rajouter les bouton a cotÃ© du nom  -->
<div class="card-deck">
    {% for tricks in tricks %}
        <div class="col-sm-3">
            <div class="card">
                {% if tricks.media[0].path is defined %}
                    <img class="card-img-top" src="/uploads/{{ tricks.media[0].path}}" alt="{{tricks.media[0].text }}" >
                {% endif %}
                <div class="card-body">
                    <h3 class="card-title">

                            <a href="{{ path('tricks_single', {id : tricks.id , slug: tricks.slug }) }} "> {{ tricks.name }} </a>


                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('admin_tricks_edit', {id : tricks.id } )  }}" class="btn btn-secondary" > <i class="fas fa-pencil-alt"></i> </a>

                            <form method="post" action="{{ path('admin_tricks_delete', {id: tricks.id } ) }}"
                                  style="display: inline-block" onsubmit="return confirm('Confirmer la suppression ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tricks.id ) }}">
                                <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                            </form>
                    </h3>

                    {% endif %}
                    <!-- End User Connect -->
                    <p class="card-text">Par : {{ tricks.author }}</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago  {# tricks.publishedAt #}</small></p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
